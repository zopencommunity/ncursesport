# bump: ncurses-version /NCURSES_VERSION="(.*)"/ https://ftp.gnu.org/pub/gnu/ncurses/|re:/href="ncurses-([\d.]+).tar.gz"/$1/|semver:*
NCURSES_VERSION="6.6"

export ZOPEN_BUILD_LINE="STABLE"
export ZOPEN_DEV_URL="https://github.com/mirror/ncurses.git"
export ZOPEN_DEV_DEPS="git curl make gawk"
export ZOPEN_STABLE_URL="https://ftp.gnu.org/pub/gnu/ncurses/ncurses-${NCURSES_VERSION}.tar.gz"
export ZOPEN_STABLE_DEPS="curl make gzip tar gawk sed coreutils zoslib pkgconfig"

export ZOPEN_MAKE_MINIMAL="yes"
export ZOPEN_CHECK="${ZOPEN_ROOT}/test.sh"
export ZOPEN_EXTRA_CONFIGURE_OPTS="--with-normal --enable-widec --enable-pc-files --with-pkg-config-libdir=\${ZOPEN_INSTALL_DIR}/lib/pkgconfig"
export ZOPEN_COMP=CLANG

export ZOPEN_EXTRA_CFLAGS="-mzos-target=zosv2r5 -march=z13"
export ZOPEN_SYSTEM_PREREQS="zos25"

zopen_init()
{
  # tic outputs to the location specified by TERMINFO, we don't want that
  unset TERMINFO
  unset ASCII_TERMINFO
}

zopen_check_results()
{
  dir="$1"
  pfx="$2"
  chk="$1/$2_check.log"

  grep -q "ncurses 6" ${chk}
  failures=$?
  # Echo the following information to guage build health
  echo "actualFailures:$failures"
  echo "totalTests:1"
  echo "expectedFailures:0"
}

zopen_append_to_env()
{
cat <<ZZ
if [ "\${_BPX_TERMPATH-x}" = "OMVS" ]; then
  [ -z "\${TERM+x}" ] && export TERM=dumb
else
  [ -z "\${TERM+x}" ] && export TERM=xterm-256color
fi
export ASCII_TERMINFO="\$PWD/share/terminfo/"
if [ ! -z "\$ZOPEN_IN_ZOPEN_BUILD" ]; then
  export ZOPEN_EXTRA_CFLAGS="\${ZOPEN_EXTRA_CFLAGS} -I\$PWD/include -I\$PWD/include/ncurses"
  export ZOPEN_EXTRA_CXXFLAGS="\${ZOPEN_EXTRA_CXXFLAGS} -I\$PWD/include -I\$PWD/include/ncurses"
  export ZOPEN_EXTRA_LDFLAGS="\${ZOPEN_EXTRA_LDFLAGS} -L\$PWD/lib"
  export ZOPEN_EXTRA_LIBS="\${ZOPEN_EXTRA_LIBS} -lncurses"
  export PKG_CONFIG_PATH="\$PWD/lib/pkgconfig:\${PKG_CONFIG_PATH}"
fi
ZZ
}

zopen_append_to_zoslib_env() {
cat <<EOF
ASCII_TERMINFO|set|PROJECT_ROOT/share/terminfo/
EOF
}

zopen_get_version() {
  cat VERSION | head -1 | awk -F" " '{print $2}'
}

zopen_post_install() 
{
  prefix=$1

  lib="$prefix/lib"
  pc="$lib/pkgconfig"
  include="$prefix/include"
  bin="$prefix/bin"

  saved_pwd=$(pwd)

  if [ -d "$lib" ]; then
    cd "$lib" || return 1
    for name in form menu ncurses panel "ncurses++"; do
      ln -sf "lib${name}w.a"   "lib${name}.a"
      ln -sf "lib${name}w_g.a" "lib${name}_g.a"
    done
    ln -sf "libncursesw.a" "libcurses.a"
  fi

  if [ -d "$pc" ]; then
    cd "$pc" || return 1
    ln -sf "ncursesw.pc" "ncurses.pc"
    ln -sf "formw.pc"    "form.pc"
    ln -sf "menuw.pc"    "menu.pc"
    ln -sf "panelw.pc"   "panel.pc"
    ln -sf "ncurses++w.pc"   "ncurses++.pc"
  fi

  if [ -d "$bin" ]; then
    cd "$bin" || return 1
    ln -sf "ncursesw6-config" "ncurses6-config"
  fi

  if [ -d "$include" ]; then
    cd "$include" || return 1
    ln -sf "ncursesw" "ncurses"
  fi

  cd "$saved_pwd" || true
}
